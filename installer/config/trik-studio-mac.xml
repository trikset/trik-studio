<?xml version="1.0" encoding="UTF-8"?>
<Installer>
    <Name>TRIK Studio Jr</Name>
    <Version></Version>
    <Title>TRIK Studio Junior</Title>
    <Publisher>CyberTech Labs Ltd.</Publisher>
    <ProductUrl>https://trikset.com/products</ProductUrl>

    <ControlScript>../controlScript.qs</ControlScript>

    <WizardStyle>Modern</WizardStyle>
    <InstallerWindowIcon>../images/trik-studio-jr</InstallerWindowIcon>
    <InstallerApplicationIcon>../images/trik-studio-jr</InstallerApplicationIcon>
    <Logo>../images/trik-studio-jr-logo.png</Logo>
    <Watermark>../images/trik-studio-jr-watermark.png</Watermark>

    <StartMenuDir>TRIK Studio Junior</StartMenuDir>
    <MaintenanceToolName>maintenance</MaintenanceToolName>
    <RemoveTargetDir>true</RemoveTargetDir>
    <!--
        Until (at least) QtIFW 4.1 @ApplicationsDir@ incorrectly returns $HOME/Applications instead of the /Applications
        as promised in the documentation, so use the raw directory name as a workaround
    -->
    <TargetDir>/Applications/TRIKStudio.Jr/</TargetDir>

    <RunProgram>open</RunProgram>
    <RunProgramArguments>
	    <Argument>@TargetDir@/TRIK Studio.app</Argument>
    </RunProgramArguments>
</Installer>
