<templates>

<template name="set-object-warzone">
    <params>
	<param name="regionId"/>
	<param name="objectId"/>
	<param name="message"/>
	<param name="trigger"/>
    </params>
    <content>
<![CDATA[
<event settedUpInitially="true">
    <condition>
        <not>
            <inside objectId="#{objectId}" regionId="#{regionId}" objectPoint="all"/>
        </not>
    </condition>
    <triggers>
        #{trigger}
        <message text="#{message}"/>
        <success/>
    </triggers>
</event>
]]>
    </content>
</template>

<template name="set-robot-warzone">
    <params>
	<param name="regionId"/>
	<param name="message" default="The robot has moved out of a valid region"/>
	<param name="trigger"/>
    </params>
    <content>
<![CDATA[
<use template="set-object-warzone">
    <with regionId="#{regionId}"/>
    <with message="#{message}"/>
    <with objectId="robot1"/>
    <with param="trigger">
        #{trigger}
    </with>
</use>
]]>
    </content>
</template>

</templates>
